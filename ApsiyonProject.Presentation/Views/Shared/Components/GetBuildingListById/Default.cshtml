@model IEnumerable<GetBuildingListDto>


<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.BlockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingStatus.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator.SurName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a  class="btn btn-primary" asp-action="AddFloor" asp-route-buildingId="@item.Id" asp-controller="Floor" >Kat Ekle</a>               
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BlockName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingStatus.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator.SurName)
                </td>
            </tr>
        }
    </tbody>
</table>

